<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BG"
    tools:context=".MenuActivity">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintDimensionRatio="1:0.2"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="40sp"
        android:background="@color/light_blue_400"
        android:textColor="@color/BG"
        android:text="@string/menu">
    </TextView>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:rowCount="4"
        app:columnCount="2"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20sp"
        android:background="@color/BG">

        <androidx.cardview.widget.CardView
            android:layout_margin="5sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="goClassic4"
            android:foreground="?android:attr/selectableItemBackground"
            app:layout_row="1"
            app:layout_column="0"
            app:layout_rowSpan="1"
            app:layout_columnSpan="2"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            android:alpha="0.99"
            app:cardCornerRadius="20sp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/blackhole"
                android:contentDescription="@string/classic_4_4">
            </ImageView>
            <TextView
                android:id="@+id/classic4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:backgroundTint="@color/orange"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:text="@string/classic_4_4">
            </TextView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="5sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="goSpeed"
            android:foreground="?android:attr/selectableItemBackground"
            app:layout_row="2"
            app:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:cardCornerRadius="20sp"
            android:alpha="0.99">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ice"
                android:contentDescription="@string/speed">
            </ImageView>
            <TextView
                android:id="@+id/speed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:text="@string/speed">
            </TextView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="5sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="goZero"
            android:foreground="?android:attr/selectableItemBackground"
            app:layout_row="2"
            app:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:cardCornerRadius="20sp"
            android:alpha="0.99">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/sky"
                android:contentDescription="@string/zero">

            </ImageView>
            <TextView
                android:id="@+id/zero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:text="@string/zero">

            </TextView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="5sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="goClassic5"
            android:foreground="?android:attr/selectableItemBackground"
            app:layout_row="3"
            app:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:cardCornerRadius="20sp"
            android:alpha="0.99">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/citysky"
                android:contentDescription="@string/classic_5">
            </ImageView>
            <TextView
                android:id="@+id/classic5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:text="@string/classic_5">

            </TextView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="5sp"
            android:layout_width="5dp"
            android:layout_height="0dp"
            android:onClick="goClassic6"
            android:foreground="?android:attr/selectableItemBackground"
            app:layout_row="3"
            app:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:cardCornerRadius="20sp"
            android:alpha="0.99">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/mystery"
                android:scaleType="centerCrop"
                android:contentDescription="@string/classic_6">
            </ImageView>
            <TextView
                android:id="@+id/classic6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:text="@string/classic_6">

            </TextView>
        </androidx.cardview.widget.CardView>

    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>